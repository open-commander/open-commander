generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator json {
  provider  = "prisma-json-types-generator"
}

model User {
  id            String    @id
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @updatedAt @map("updated_at")
  name          String
  email         String    @unique
  emailVerified Boolean   @map("email_verified")
  image         String?   @map("image")
  bio           String?   @map("bio")

  // images → direct URL uploads
  avatarImageUrl String? @map("avatar_image_url")
  coverImageUrl  String? @map("cover_image_url")

  // images → UploadThing keys
  avatarImageUTKey String? @map("avatar_image_ut_key")
  coverImageUTKey  String? @map("cover_image_ut_key")

  timezone String? @default("Etc/GMT")

  preferences UserPreferences?

  sessions Session[]
  accounts Account[]

  // better-auth-admin
  role       String    @default("user")
  banReason  String?   @map("ban_reason")
  banExpires DateTime? @map("ban_expires")
  banned     Boolean   @default(false)

  // better-auth-username
  username        String?
  displayUsername String? @map("display_username")

  terminalSessions TerminalSession[]
  tasks            Task[]
  apiClients       ApiClient[]
  projects         Project[]

  @@unique([username])
  @@map("users")
}

model Session {
  id             String    @id
  expiresAt      DateTime  @map("expires_at")
  token          String    @unique
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime? @updatedAt @map("updated_at")
  ipAddress      String?   @map("ip_address")
  userAgent      String?   @map("user_agent")
  userId         String    @map("user_id")
  user           User      @relation(fields: [userId], references: [id])
  impersonatedBy String?   @map("impersonated_by")

  @@map("sessions")
}

model Account {
  id                    String    @id
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @map("user_id")
  user                  User      @relation(fields: [userId], references: [id])
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime? @updatedAt @map("updated_at")

  @@map("accounts")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime  @map("expires_at")
  createdAt  DateTime? @default(now()) @map("created_at")
  updatedAt  DateTime? @updatedAt @map("updated_at")

  @@map("verifications")
}

// #######################
// # TERMINAL MANAGEMENT #
// #######################
enum TerminalSessionStatus {
  pending
  starting
  running
  stopped
}

model TerminalSession {
  id        String                @id @default(cuid())
  name      String
  userId    String                @map("user_id")
  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    TerminalSessionStatus @default(pending)
  createdAt DateTime              @default(now()) @map("created_at")
  updatedAt DateTime              @updatedAt @map("updated_at")

  port          Int?    @map("port")
  wsPath        String? @map("ws_path")
  containerName String? @map("container_name")

  projectId String?  @map("project_id")
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, status])
  @@index([projectId])
  @@map("terminal_sessions")
}

// #######################
// # PROJECT MANAGEMENT  #
// #######################
model Project {
  id           String         @id @default(cuid())
  name         String
  folder       String
  defaultCliId AgentProvider? @map("default_cli_id")
  userId       String         @map("user_id")
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  sessions TerminalSession[]

  @@index([userId])
  @@map("projects")
}

enum AgentProvider {
  opencode
  claude
  codex
  cursor
}

model UserPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// [UserPreferencesAgents]
  agents    Json?    @default("{}")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user_preferences")
}

// #######################
// # TASK MANAGEMENT     #
// #######################
enum TaskStatus {
  todo
  doing
  done
  canceled
}

enum TaskSource {
  web
  api
}

model Task {
  id          String        @id @default(cuid())
  title       String?       // Deprecated, kept for migration compatibility
  body        String        @db.Text
  status      TaskStatus    @default(todo)
  source      TaskSource    @default(web)
  agentId     AgentProvider?
  repository  String?       @map("repository") // GitHub repository in owner/repo format
  mountPoint  String?       @map("mount_point") // Relative path within workspace to mount as /workspace (auto-set when repository is used)
  userId      String        @map("user_id")
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Json?         @default("[]")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  executions  TaskExecution[]

  @@index([userId])
  @@index([userId, status])
  @@index([userId, source])
  @@map("tasks")
}

enum TaskExecutionStatus {
  pending
  running
  completed
  failed
  needs_input
}

model TaskExecution {
  id            String              @id @default(cuid())
  taskId        String              @map("task_id")
  task          Task                @relation(fields: [taskId], references: [id], onDelete: Cascade)
  status        TaskExecutionStatus @default(pending)
  agentId       AgentProvider
  jobId         String?             @map("job_id") // BullMQ job ID
  containerName String?             @map("container_name")

  // Execution result
  completed     Boolean             @default(false)
  needsInput    Boolean             @default(false) @map("needs_input")
  inputRequest  String?             @db.Text @map("input_request")
  result        String?             @db.Text
  errorMessage  String?             @db.Text @map("error_message")

  // Logs and context
  logs          String?             @db.Text
  memoryUsage   Int?                @map("memory_usage")
  tokenCount    Int?                @map("token_count")
  context       Json?               @default("{}")

  startedAt     DateTime?           @map("started_at")
  finishedAt    DateTime?           @map("finished_at")
  createdAt     DateTime            @default(now()) @map("created_at")
  updatedAt     DateTime            @updatedAt @map("updated_at")

  @@index([taskId])
  @@index([taskId, status])
  @@map("task_executions")
}

// #######################
// # API CLIENTS         #
// #######################
model ApiClient {
  id          String      @id @default(cuid())
  name        String
  description String?
  userId      String      @map("user_id")
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  secrets     ApiSecret[]
  callLogs    ApiCallLog[]

  @@index([userId])
  @@map("api_clients")
}

model ApiSecret {
  id          String    @id @default(cuid())
  name        String
  keyHash     String    @map("key_hash") // SHA-256 hash of the secret key
  keyPrefix   String    @map("key_prefix") // First 8 chars for identification (e.g., "oc_sk_a1b2")
  clientId    String    @map("client_id")
  client      ApiClient @relation(fields: [clientId], references: [id], onDelete: Cascade)
  lastUsedAt  DateTime? @map("last_used_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([clientId])
  @@index([keyHash])
  @@map("api_secrets")
}

model ApiCallLog {
  id          String    @id @default(cuid())
  clientId    String    @map("client_id")
  client      ApiClient @relation(fields: [clientId], references: [id], onDelete: Cascade)
  endpoint    String
  method      String
  statusCode  Int       @map("status_code")
  ipAddress   String?   @map("ip_address")
  userAgent   String?   @map("user_agent")
  requestBody String?   @db.Text @map("request_body")
  responseMs  Int?      @map("response_ms")
  errorMessage String?  @map("error_message")
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([clientId])
  @@index([clientId, createdAt])
  @@map("api_call_logs")
}
